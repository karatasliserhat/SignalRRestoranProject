@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referans İle ilgili işlemleri aşağıdan geçerkleştirebilirsiniz.
                        </div>
                        <div class="text-end mb-2 my-2">
                            <a type="submit" asp-controller="Testimonial" asp-action="CreateTestimonial" class="btn btn-outline-info text-end">Referans Ekle</a>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">İçerik</th>
                                    <th scope="col">ImageUrl</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            @if (Model.Any())
                            {
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>
                                            <td>@item.ImageUrl</td>
                                            <td>@(item.Status==true?"Akif":"Pasif")</td>
                                            <td><a class="btn btn-outline-danger" asp-controller="Testimonial" asp-action="Delete" asp-route-id="@item.DataProtect">Sil</a></td>
                                            <td><a class="btn btn-outline-warning" asp-controller="Testimonial" asp-action="Update" asp-route-id="@item.DataProtect">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <tbody>
                                    <tr class="text-center">
                                        <td colspan="8">Veri Yok</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


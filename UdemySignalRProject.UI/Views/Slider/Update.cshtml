@model UpdateSliderDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Güncelleme Formu</div>
                    </div>
                    <form asp-action="Update" asp-controller="Slider" method="post">
                        <input type="hidden" asp-for="@Model.SliderId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="@Model.Title"></label>
                                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="1. Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Title1"></label>
                                <input type="text" class="form-control" asp-for="@Model.Title1" placeholder="2. Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Title2"></label>
                                <input type="text" class="form-control" asp-for="@Model.Title2" placeholder="3. Başlığı Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description"></label>
                                <input type="text" class="form-control" asp-for="@Model.Description" placeholder="1. Açıklama Yazınız">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description1"></label>
                                <input type="text" class="form-control" asp-for="@Model.Description1" placeholder="2. Açıklama Yazınız">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description2"></label>
                                <input type="text" class="form-control" asp-for="@Model.Description2" placeholder="3. Açıklama Yazınız">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


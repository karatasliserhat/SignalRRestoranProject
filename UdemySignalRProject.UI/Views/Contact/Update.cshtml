@model UpdateContactDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Güncelleme Formu</div>
                    </div>
                    <form asp-action="Update" asp-controller="Contact" method="post">
                        <input type="hidden" asp-for="@Model.ContactId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="@Model.Location"></label>
                                <input type="text" class="form-control" asp-for="@Model.Location" placeholder="Google Maps Linki yazınız">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.PhoneNumber"></label>
                                <input type="tel" class="form-control" asp-for="@Model.PhoneNumber" placeholder="Telefon Numarası">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.MailAdress"></label>
                                <input type="tel" class="form-control" asp-for="@Model.MailAdress" placeholder="Email Adresi">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.FooterTitle"></label>
                                <input type="text" class="form-control" asp-for="@Model.FooterTitle" placeholder="Footer Başlık">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.FooterDescription"></label>
                                <textarea class="form-control" cols="5" rows="5" asp-for="@Model.FooterDescription"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.OpenDaysDescription"></label>
                                <input type="text" class="form-control" asp-for="@Model.OpenDaysDescription" placeholder="Açık Günler Başlık">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.OpenDays"></label>
                                <input type="text" class="form-control" asp-for="@Model.OpenDays" placeholder="Açık Günler">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.OpenHours"></label>
                                <input type="text" class="form-control" asp-for="@Model.OpenHours" placeholder="Açık Saatler">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success">İletişim Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

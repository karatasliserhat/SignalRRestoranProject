@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya İle ilgili işlemleri aşağıdan geçerkleştirebilirsiniz.
                        </div>
                        <div class="text-end mb-2 my-2">
                            <a type="submit" asp-controller="SocialMedia" asp-action="CreateSocialMedia" class="btn btn-outline-info">Yeni Sosyal Medya</a>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Url</th>
                                    <th scope="col">Icon</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead> @if (Model.Any())
                            {
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Url</td>
                                            <td>@item.Icon</td>
                                            <td><a class="btn btn-outline-danger" asp-controller="SocialMedia" asp-action="Delete" asp-route-id="@item.DataProtect">Sil</a></td>
                                            <td><a class="btn btn-outline-warning" asp-controller="SocialMedia" asp-action="Update" asp-route-id="@item.DataProtect">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <tbody>
                                    <tr class="text-center">
                                        <td colspan="6">Veri Yok</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


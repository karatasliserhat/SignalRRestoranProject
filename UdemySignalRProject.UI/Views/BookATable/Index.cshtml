@model CreateBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
@await Component.InvokeAsync("_UILayoutHeadComponentPartial")


<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")


    <!-- book section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
                    Rezervasyon Oluşturun
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form asp-controller="BookATable" asp-action="Index" method="post">
                            <div>
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="@Model.Name" />
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon Numarası" asp-for="@Model.Phone" />
                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="@Model.Mail" />
                            </div>
                            <div>
                                <select class="form-control nice-select wide" asp-for="@Model.PersonCount">
                                    <option value="" disabled selected>
                                        Kaç Kişiniz
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                    <option value="6">
                                        6++
                                    </option>
                                </select>
                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="@Model.Date">
                            </div>
                            <div class="btn_box">
                                <button>
                                    Yerinizi Ayırtın
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end book section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")

    <!-- footer section -->
    <!-- jQery -->
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial");


</body>

</html>

@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kategori İle ilgili işlemleri aşağıdan geçerkleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Kategori Adı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead> @if (Model.Count > 0)
                            {
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.CategoryName</td>
                                            <td>@(item.Status==true?"Akif":"Pasif")</td>
                                            <td><a class="btn btn-outline-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.DataProtector">Sil</a></td>
                                            <td><a class="btn btn-outline-warning" asp-controller="Category" asp-action="Update" asp-route-id="@item.DataProtector">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    Kayıt Bulunamadı
                                </div>
                            }
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil İşlemleri</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Profil Güncelleme Formu</div>
                    </div>
                    <div class="alert alert-warning" asp-validation-summary="ModelOnly"></div><br />
                    <form asp-action="Index" asp-controller="Setting" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="@Model.UserName"></label>
                                <input type="text" class="form-control" readonly asp-for="@Model.UserName" placeholder="Kullanıcı Adınız">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Name"></label>
                                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Adınız">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Surname"></label>
                                <input type="text" class="form-control" asp-for="@Model.Surname" placeholder="Soyadınız">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email"></label>
                                <input type="text" class="form-control" asp-for="@Model.Email" placeholder="Email adresi">
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password"></label>
                                <input type="text" class="form-control" asp-for="@Model.Password" placeholder="Şifre">
                            </div><div class="form-group">
                                <label asp-for="@Model.ConfirmPassword"></label>
                                <input type="text" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(() => {

        var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7224/SignalRHub").build();

        connection.start().then(() => {

            setInterval(() => {
                connection.invoke("SendNotification");
            }, 1000)
        }).catch((err) => {

            console.log(err);
        });

        connection.on("ReceiveNotificationCountStatusfalse", (value) => {

            $("#notificationCountStatusFalse").text(value);
            $("#notificationCountStatusFalse2").text(value + ' ' + 'Yeni Bildirim Var');
        });
        connection.on("ReceiveGetNotificationStatusFalseList", (values) => {

            console.log(values);

            $("#notificationList").empty();
            for (var i = 0; i < values.length; i++) {
                $("#notificationList").append(`<a href="#">
                        <div class="${values[i].type}"> <i class="${values[i].icon}"></i> </div>
                         <div class="notif-content">
                        <span class="block">
                            ${values[i].description}
                        </span>
                        <span class="time">${values[i].date}</span>
                        </div>
                        </a>`)
            };

        });
    });

</script>


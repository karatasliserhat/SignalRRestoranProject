@model List<ResultContactDto>
<footer class="footer_section">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-4 footer-col">
                    <div class="footer_contact">
                        <h4>
                            Bize Ulaşın
                        </h4>
                        <div class="contact_link_box">
                            <a href="">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                <span>
                                    @item.Location
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                <span>
                                    @item.PhoneNumber
                                </span>
                            </a>
                            <a href="">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <span>
                                    @item.MailAdress
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <div class="footer_detail">
                        <a asp-controller="Default" asp-action="Index" class="footer-logo">
                            @item.FooterTitle
                        </a>
                        <p>
                            @item.FooterDescription
                        </p>
                        @await Component.InvokeAsync("_UILayoutSocialMediaComponentPartial")
                    </div>
                </div>
                <div class="col-md-4 footer-col">
                    <h4>
                        @item.OpenDaysDescription
                    </h4>
                    <p>
                        @item.OpenDays
                    </p>
                    <p>
                        @item.OpenHours
                    </p>
                </div>
            </div>
        }
        <div class="footer-info">
            <p>
                &copy; <span id="displayYear"></span> Tüm Hakları Saklıdır
                <a asp-controller="Default" asp-action="Index">S&K Restoran</a><br><br>
                &copy; <span id="displayYear"></span> Yazılım Geliştirme
                <a href="https://themewagon.com/" target="_blank">Serhat KARATAŞLI</a>
            </p>
        </div>
    </div>
</footer>
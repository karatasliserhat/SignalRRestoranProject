@model RegisterDtos
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Kayıt Formu</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib-regform-32/images/Sauce1.jpg" width="484" height="584" alt="form">
            </div>
            <form class="form-detail" asp-controller="Register" asp-action="Index" method="post">
                <h2>Kayıt Formu</h2>
                <div class="form-row">
                    <input type="text" asp-for="Name" class="input-text" placeholder="Adınız">
                </div>
                <div class="form-row">
                    <input type="text" asp-for="Surname" class="input-text" placeholder="Soyadınız">
                </div>
                <div class="form-row">
                    <input type="text" asp-for="UserName" class="input-text" placeholder="Kullanıcı Adınız">
                </div>
                <div class="form-row">
                    <input type="text" asp-for="Email" class="input-text" placeholder="Mail Adresiniz">
                </div>
                <div class="form-row">
                    <input type="password" asp-for="Password" class="input-text" placeholder="Şifre">
                </div>
                <div class="form-row">
                    <input type="password" asp-for="ConfirmPassword" class="input-text" placeholder="Şifre Tekrar">
                </div>
                <div class="form-row-last">
                    <input type="submit" class="register" value="Kayıt Ol">
                </div>
            </form>
        </div>
    </div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
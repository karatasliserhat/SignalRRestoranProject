@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim İle ilgili işlemleri aşağıdan geçerkleştirebilirsiniz. <strong>Tema bütünlüğü için sadece 1 adet İletişim alanı oluşturmayı unutmayın...</strong>
                        </div>
                        <div class="text-end mb-2 my-2">
                            <a type="submit" asp-controller="Contact" asp-action="CreateContact" class="btn btn-outline-info text-end">Yeni İletişim Ekle</a>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Lokasyon</th>
                                    <th scope="col">Telefon Numarası</th>
                                    <th scope="col">Mail Adresi</th>
                                    <th scope="col">Footer Başlık</th>
                                    <th scope="col">Footer Açıklama</th>
                                    <th scope="col">Açık Günler Açıklama</th>
                                    <th scope="col">Açık Günler</th>
                                    <th scope="col">Açık Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            @if (Model.Count > 0)
                            {
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Location</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.MailAdress</td>
                                            <td>@item.FooterTitle</td>
                                            <td>@item.FooterDescription</td>
                                            <td>@item.OpenDaysDescription</td>
                                            <td>@item.OpenDays</td>
                                            <td>@item.OpenHours</td>
                                            <td><a class="btn btn-outline-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.DataProtect">Sil</a></td>
                                            <td><a class="btn btn-outline-warning" asp-controller="Contact" asp-action="Update" asp-route-id="@item.DataProtect">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <tbody>
                                    <tr class="text-center">
                                        <td colspan="6">Veri Yok</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


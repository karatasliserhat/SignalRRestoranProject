<script type="text/javascript">

    $(document).ready(() => {

        var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7224/SignalRHub").build();

        connection.start().then(() => {

            setInterval(() => {

                connection.invoke("SendCategory");
                connection.invoke("SendProduct");
                connection.invoke("SendOrder");
            }, 1000);
        }).catch((err) => {
            console.log(err);
        });

        connection.on("ReceiveCategoryCount", (value) => {

            $("#categoryCount").text(value);
        });
        connection.on("ReceiveCategoryActiveCount", (value) => {

            $("#activeCategory").text(value);
        });
        connection.on("ReceiveCategoryPassiveCount", (value) => {

            $("#passiveCategory").text(value);
        });
        connection.on("ReceiveProductCount", (value) => {
            $("#productCount").text(value);
        });
        connection.on("ReceiveHamburgerProductCount", (value) => {
            $("#productHamburgerCount").text(value);
        });
        connection.on("ReceiveDrinkProductCount", (value) => {
            $("#productDrinkCount").text(value);
        });
        connection.on("ReceiveProductPriceAvg", (value) => {
            $("#productPriceAvg").text(value);
        });
        connection.on("ReceiveProductPriceMin", (value) => {
            $("#productPriceMin").text(value);
        });
        connection.on("ReceiveProductPriceMax", (value) => {
            $("#productPriceMax").text(value);
        });
        connection.on("ReceiveProductPriceAvgHamburger", (value) => {
            $("#productPriceAvgHamburger").text(value);
        });
        connection.on("ReceiveTotalOrderCount", (value) => {
            $("#totalOrderCount").text(value);
        })
        connection.on("ReceiveActiveOrderCount", (value) => {
            $("#activeOrderCount").text(value);
        })
        connection.on("ReceiveLastOrderPrice", (value) => {
            $("#lastOrderPrice").text(value);
        })
    });
</script>


